		"@nostr-dev-kit/ndk-svelte": "^2.4.38",
		"@nostr-dev-kit/ndk-wallet": "^0.6.2",
		"@scure/base": "^2.0.0",
		"date-fns": "^4.1.0",
		"debug": "^4.4.1",
		"esm-env": "^1.2.2",
		"mode-watcher": "^1.1.0",
		"nanoid": "^5.1.5",
		"qr-scanner": "^1.4.2",
		"svelte-sonner": "^1.0.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
